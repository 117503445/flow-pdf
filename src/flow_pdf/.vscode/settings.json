{
    "python.analysis.typeCheckingMode": "basic",
    "VSCodeCounter.languages": {
        "python": {
            "extensions": [
                ".py"
            ]
        }
    },
    "python.formatting.provider": "black",
    "python.defaultInterpreterPath": "/workspace/flow_pdf/.venv/bin",
    "mypy.enabled": true,
    "mypy.dmypyExecutable": "${workspaceFolder}/.venv/bin/dmypy",

    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,
    "code-runner.defaultLanguage": "python",
    "code-runner.ignoreSelection": true,
    // "code-runner.executorMapByGlob": {
    //     "*": "poetry run python flow_pdf/main.py #"
    // },
    "code-runner.enableAppInsights": false,
    "code-runner.customCommand": "poetry run python flow_pdf/main.py"
}